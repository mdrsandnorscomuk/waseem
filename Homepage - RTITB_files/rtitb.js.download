/* ------------------------------- Course Booking Aids --------------------------- */

jQuery('.rtitb__form #outside').change(function(){
	if(this.checked){
		jQuery('.rtitb__form input[name="postcode"]').prop('disabled',true).attr('value','');
	}else{
		jQuery('.rtitb__form input[name="postcode"]').prop('disabled',false);
	}
});

/* ----------------------------- Course Search Aids ------------------------------- */

jQuery(window).load(function(){
	if(jQuery('#search-results').length > 0){
		var headerOffset = jQuery('#wpadminbar').height() + jQuery('#top-header').height() + jQuery('#main-header').height();
		jQuery('html, body').animate({
        	scrollTop: jQuery('#search-results').offset().top - headerOffset
    	}, 500);
	}
});

