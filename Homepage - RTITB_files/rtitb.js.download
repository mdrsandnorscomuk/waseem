/* --------------------------- Field Validation -------------------------------------- */

jQuery('form[name="cpcsearch"]').on('submit', function(){
	if(jQuery('#regionId').val() == 'Please select'){
		var f = document.getElementById('regionId');
		f.setCustomValidity('Please choose a region');
		return false;
	}
});


